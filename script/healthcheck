#!/bin/bash

IP_ADDRESS=${1:-unspecified}

echo "allowing 10 seconds to boot before checking health"
for i in {1..10}; do
  echo -n '.'
  sleep 1
done

echo
curl --silent --show-error --max-time 30 --fail "127.0.0.1"
sleep 1
echo
curl --silent --show-error --max-time 30 --fail "127.0.0.1/api/health" | jq
